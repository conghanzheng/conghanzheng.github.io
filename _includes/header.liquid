<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <!-- Navbar Links (Left) -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto flex-nowrap">
          <!-- Home Link (always present) -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/' | relative_url }}">
              Home
              {% if page.permalink == '/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>

          <!-- Research Link -->
          <li class="nav-item">
            <a class="nav-link" href="{{ '/#research' | relative_url }}">
              Research
            </a>
          </li>

          <!-- Teaching Link -->
          <li class="nav-item">
            <a class="nav-link" href="{{ '/#teaching' | relative_url }}">
              Teaching
            </a>
          </li>

          <!-- Code Link -->
          <li class="nav-item">
            <a class="nav-link" href="{{ '/#code' | relative_url }}">
              Code
            </a>
          </li>

          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()">
                <span class="nav-link">ctrl k <i class="ti ti-search"></i></span>
              </button>
            </li>
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toggle theme mode -->
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="ti ti-sun-moon" id="light-toggle-system"></i>
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>

      <!-- Navbar Brand (Right) -->
      <div class="navbar-brand-container {% if page.permalink == '/' %}desktop-hide-brand{% endif %}">
        <a class="navbar-brand-link" href="{{ site.baseurl }}/">
          <div class="navbar-brand">
            {% if site.title == 'blank' %}
              {{- site.first_name }} {{ site.middle_name }} {{ site.last_name -}}
            {% else %}
              {{- site.title -}}
            {% endif %}
          </div>
          
          <!-- site.affiliation -->
          <div class="navbar-affiliation">{{ site.affiliation }}</div>
        </a>
      </div>
    </div>
  </nav>

  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>

<style>
  /* Navbar brand container styling */

  /* - Both Name and Affiliation*/
  .navbar-brand-container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    margin-right: 0;
    line-height: 1.5;
    z-index: 1040; /* Higher z-index to keep on top */
    position: relative; /* Establish stacking context */
  }
  
  /* - Name */
  .navbar-brand { 
    padding: 0;
    margin-bottom: 0;
    margin-right: 0;
    font-size: 1.25rem;
    display: block;
  }
  
  /* - Affiliation */
  .navbar-affiliation {
    font-size: 1rem;
    display: block;
  }

  /* Navbar brand link that wraps both elements */
  .navbar-brand-link {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    text-decoration: none;
    color: inherit;
  }

  .navbar-brand-link:hover {
    text-decoration: none;
    color: inherit;
  }

  /* Active link in navbar */
  .navbar-nav .nav-link.active {
    color: var(--global-theme-color);
  }

  /* Desktop view - hide brand and affiliation on homepage */
  @media (min-width: 768px) {
    .desktop-hide-brand {
      display: none;
    }
  }

  /* Mobile and tablet view styling - apply to all screens up to 991px */
  @media (max-width: 767px) {
    /* Keep brand visible on all pages including homepage */
    .navbar-brand-container {
      display: flex; /* Displayed as a flex container */
    }

    .desktop-hide-brand .navbar-brand {
      font-weight: bold; /* Bold name only for homepage */
    }
    
    /* Position the navbar collapse properly */
    .navbar-collapse {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: white;
      z-index: 1030; /* Lower than brand container */
      box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    
    /* Toggle button should always be visible below 992px */
    .navbar-toggler {
      display: block !important;
    }
    
    /* Override Bootstrap's navbar-expand-sm behavior */
    .navbar-expand-sm .navbar-toggler {
      display: block !important;
    }
    
    .navbar-expand-sm .navbar-collapse {
      display: none !important;
    }
    
    .navbar-expand-sm .navbar-collapse.show {
      display: block !important;
    }
    
    /* Ensure navbar items are stacked */
    .navbar-nav {
      flex-direction: column !important;
      padding: 10px 0 !important;
    }
    
    /* Ensure container properly positions elements */
    .navbar > .container {
      position: relative;
    }
  }
  
  /* Extra styles specific to very small screens if needed */
  @media (max-width: 767px) {
    /* Any additional styles specifically for phones can go here */
  }
</style>